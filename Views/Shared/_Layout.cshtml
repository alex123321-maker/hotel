<!DOCTYPE html>
<html lang="ru-ru">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container-fluid text-center p-0 m-0">
        <div class="row " style="box-sizing: border-box;">
            <header class="justify-content-end position-fixed d-flex sidebar header z-2 ">
                    @Html.Partial("_LoginPartial")
            </header>
        </div>

        <div class="row">
            <div class="col-2 p-0 ">
                <div class="col-2 p-0 sidebar position-fixed h-100 z-2">
                    <div class="flex-row p-3 logo fs-3">Royal Palace Inn</div>
                    <br />
                    <br />
                    <div class="flex-row active p-3 ">Бронирования</div>
                    <div class="flex-row p-3 ">Клиенты</div>
                    <div class="flex-row p-3 ">Услуги</div>
                    <div class="flex-row p-3 ">Скидки</div>
                    <div class="flex-row p-3 ">Номера</div>
                </div>
            </div>
            <div class="col-10">
                
                    <div class="content container-fluid p-0">
                        @RenderBody()
                    </div>
                
            </div>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
