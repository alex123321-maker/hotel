@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <div class="row row-cols-auto position-relative me-0 " style="box-sizing: border-box;">
        <div class="" >
            @Html.ActionLink("Здравствуйте " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class="nav-link" })
        </div>
        <div class=""><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></div>
    </div>
    }
}
else
{
    <div class="row row-cols-auto justify-content-end me-0">
        <div class="col p-1">@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class="nav-link" })</div>
        <div class="col p-1">@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</div>
    </div>
}
